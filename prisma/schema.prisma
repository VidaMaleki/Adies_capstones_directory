// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
// Each developer has their own information stored in db
// but if it's group project, there is one log in
// Many developers <-> one app
model Developers {
  id      Int      @id @default(autoincrement())
  name    String
  email   String   @unique
  linkedin String?
  app       Apps[]     @relation("AppDevelopers")
}

model Apps {
  id      Int      @id @default(autoincrement())
  appName   String
  description String
  developer  Developers[] @relation("AppDevelopers")
  appLink String?
  videoLink String?
  github String?
  type String
  technologies String[]
}
